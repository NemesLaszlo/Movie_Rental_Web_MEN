<div>
  <label>Title</label>
  <input type="text" name="title" value="<%= movie.title %>" />
</div>
<div>
  <label>Director</label>
  <select name="director">
    <% directors.forEach(director => { %> <% if (director. id == movie.director)
    { %>
    <option selected label="<%= director.name %>" value="<%= director.id %>">
      <%= director.name %>
    </option>
    <%} else {%>
    <option label="<%= director.name %>" value="<%= director.id %>">
      <%= director.name %>
    </option>
    <% } %> <% }) %>
  </select>
</div>
<div>
  <label>Release Date</label>
  <input
    type="date"
    name="releaseDate"
    value="<%= movie.releaseDate == null ? '' : movie.releaseDate.toISOString().split('T')[0] %>"
  />
</div>
<div>
  <label>Play Time</label>
  <input type="number" name="playTime" value="movie.playTime" min="1" />
</div>
<div>
  <label>Cover</label>
  <input type="file" name="cover" class="filepond" />
</div>
<div>
  <label>Description</label>
  <textarea name="description"><%= movie.description %></textarea>
</div>
